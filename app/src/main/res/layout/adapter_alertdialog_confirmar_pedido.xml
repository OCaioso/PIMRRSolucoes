<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtProdutoServicoAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPrecoAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnMenosQuantidadeAlertDialog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/cinzaBotao"
            android:src="@drawable/ic_arrow_left"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/txtQuantidadeAlertDialog"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:textSize="20sp"
            android:text="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnMaisQuantidadeAlertDialog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/cinzaBotao"
            android:src="@drawable/ic_arrow_right"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>